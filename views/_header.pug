header.header
    //- .nav es el block y nav--tours el modifier
    nav.nav.nav--tours 
        a.nav__el(href='/') All tours
    div.header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Logout 
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}` alt='User image' )
                span= user.name.split(' ')[0]
        else                
            a.nav__el.nav__el--cta(href='/') Sign up
            a.nav__el.nav__el--cta(href='/login') Login 